<%- model_class = Bet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:gamble_id) %>:</strong></dt>
  <dd><%= @bet.gamble_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @bet.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bet_on) %>:</strong></dt>
  <dd><%= @bet.bet_on.desc%></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @bet.amount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bets_path, :class => 'btn'  %>
</div>

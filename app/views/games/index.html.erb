<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Host</th>
      <th>Guest</th>
      <th>Host score</th>
      <th>Guest score</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= game.host_id %></td>
        <td><%= game.guest_id %></td>
        <td><%= game.host_score %></td>
        <td><%= game.guest_score %></td>
        <td><%= game.status %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


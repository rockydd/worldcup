<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

  <dl class="dl-horizontal">
    <dd><%= @game.date %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dd><%= @game.readable_status%></dd>
  </dl>

  <div class='game-summary center-box'>
    <%= image_tag @game.host.avatar.url(:thumb) %>
    <span>让<%= @game.balance.to_i %>球</span>
    <%= image_tag @game.guest.avatar.url(:thumb) %>
  </div>

  <%if @game.ended?%>
    <div class='center-box'>
      <span class='score'><%= @game.host_score%></span>
      <span class='score'>:</span>
      <span class='score'><%= @game.guest_score%></span>
    </div>
  <% end%>

  <div class='game-bet center-box'>
    <div width="100px">
      <% @bet = Bet.new %>
      <% @game.gamble_items.each do |gamble_item| %>
        <%@my_bet = current_user.has_bet_on?(gamble_item) if current_user%>
        <%= form_for @bet, :html => { :id => 'form_host_win', :class => 'bet-form'} do |f| %>
          <%= f.hidden_field :game_id, :value => @game.id %>
          <%= f.hidden_field :gamble_id, :value => @gamble.id %>
          <%= f.hidden_field :gamble_item_id, :value => gamble_item.id%>
          <div class='bet-field'>
          <%= f.number_field :amount, :class=> 'bet-box', :value => @my_bet && @my_bet.amount || 1%>
          <%= button_tag gamble_item.desc,
            data: {confirm: "Are you sure to bet on #{gamble_item.desc}?"}, class: "btn bet-button #{'btn-primary' if current_user and current_user.has_bet_on?(gamble_item)}" %>
          </div>
          <ul style="display:none">
            <% gamble_item.bets.each do |bet|%>
              <li><%= bet.user.email%>:<%= bet.amount%></li>
            <% end %>
          </ul>
        <% end%>
      <% end%>
    </div>
  </div>

  <% if can? :update, @game%>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>
